<body class="trip-edit">
<div class="sides">
  <a class='a-logo' href='/'>Bike Share</a>
  <a href="/stations"   class="logo">STATIONS</a>
  <a href="/trips"      class="logo">TRIPS</a>
  <a href="/conditions" class="logo">CONDITIONS</a>
</div>

<div class='edit-container'>
  <h1><span>Edit</span> Trip</h1>
  <form action="/trips/<%= @trip.id %>" method="post">
    <input type="hidden" name="_method" value="PUT" />
    <input type="integer" name="trip[duration]" value="<%= @trip.duration %>" />
    <input type="text" name="trip[start_date]" value="<%= @trip.start_date %>" />
    <input type="text" name="trip[start_station_id]" value="<%= @trip.start_station_id %>" />
    <input type="text" name="trip[end_date]" value="<%= @trip.end_date %>" />
    <input type="text" name="trip[end_station_id]" value="<%= @trip.end_station_id %>" />
    <input type="integer" name="trip[bike_id]" value="<%= @trip.bike_id %>" />
    <input type="text" name="trip[subscription_type]" value="<%= @trip.subscription_type %>" />
    <input type="integer" name="trip[zip_code]" value="<%= @trip.zip_code %>">
    <input class='submit-btn' type="submit" value ="SUBMIT">
  </form>
</div>
</body>

<body class="trip-show">
  <div class="sides">
    <a class='a-logo' href='/'>Bike Share</a>
    <a href="/stations"   class="logo">STATIONS</a>
    <a href="/trips"      class="logo">TRIPS</a>
    <a href="/conditions" class="logo">CONDITIONS</a>
  </div>

  <div class="trip-index-container">
    <header>
      <h1><span>Trip</span> Details</h1>
    </header>
    <div class="trip-card">
      <ul>
        <li><span>Duration:</span>
          <%= @trips.duration %>
        </li>
        <li><span>Start Date:</span>
          <%= @trips.start_date %></li>
        <li><span>Start Station:</span>
          <%= @trips.start_station_id %></li>
        <li><span>End Date:</span>
          <%= @trips.end_date %></li>
        <li><span>End Station:</span>
          <%= @trips.end_station_id %></li>
        <li><span>Bike Id:</span>
          <%= @trips.bike_id %></li>
        <li><span>Subscription Type:</span>
          <%= @trips.subscription_type %></li>
        <li><span>Zip Code:</span>
          <%= @trips.zip_code %></li>
      </ul>
    </div>
  </div>
</body>

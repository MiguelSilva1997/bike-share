<% @title = "Trip Dashboard" %>
  <div class="sides">
    <a class='a-logo' href='/'>Bike Share</a>
    <a href="/stations" class="logo">STATIONS</a>
    <a href="/trips" class="logo">TRIPS</a>
    <a href="/conditions" class="logo">CONDITIONS</a>
  </div>
  <div class='trip-index-container'>
    <header>
      <h1><span>Trip</span> Dashboard</h1>
    </header>
    <h1>Analytics</h1>
    <div class='trip-card'>
      <ul>
        <li><span>Average trip duration:</span>
          <%= Trip.average_duration %> minutes</li>
        <li> <span>Longest Ride:</span>
          <%= Trip.longest_ride %> minutes</li>
        <li> <span> Shortest Ride:</span>
          <%= Trip.shortest_ride %> minutes</li>
        <li> <span>Station where most rides start:</span>
          <%= Trip.station_most_starting_rides %>
        </li>
        <li> <span>Station where most rides end:</span>
          <%= Trip.station_most_ending_rides %>
        </li>
        <li> <span> Most Ridden Bike ID:</span>
          <%= Trip.most_ridden_bike.first %>
        </li>
        <li> <span> Most Ridden Bike Ride Count:</span>
          <%= Trip.most_ridden_bike.last %>
        </li>
        <li> <span> Least Ridden Bike ID:</span>
          <%= Trip.least_ridden_bike.first %>
        </li>
        <li> <span> Least Ridden Bike Ride Count:</span>
          <%= Trip.least_ridden_bike.last %>
        </li>
        <li> <span> Subscriber count</span>
          <%= Trip.subscriber_count %>
        </li>
        <li> <span>Subscriber Percentage</span>
          <%= Trip.subscriber_percentage %>
        </li>
        <li> <span> Customer count</span>
          <%= Trip.customer_count %>
        </li>
        <li> <span> Customer Percentage</span>
          <%= Trip.customer_percentage %>
        </li>
        <li> <span> Date with highest number of trips</span>
          <%= Trip.date_with_highest_trips.slice(0) %>
        </li>
        <li> <span> Date with lowest number of trips</span>
          <%= Trip.date_with_lowest_trips.slice(0) %>
        </li>
      </ul>
    </div>
    <h1><span>Monthly</span> Breakdown</h1>
    <div class='month-container'>
      <% @month_breakdown.each do |month| %>
        <div class='monthly-breakdown trip-card'>
          <h2><span> <%= month.slice(0) %></span> <%= month.slice(1) %></h2>
          <p><span>Ride Count:</span> <%= month.slice(2) %>
          </p>
        </div>
        <% end %>
    </div>
    <h1><span>Weather</span> Conditions (day with highest rides)</h1>
    <div class='trip-card'>
      <ul>
        <li><span>Date:</span> <%= Condition.weather_on_day_with_highest_rides.first.id %></li>
        <li><span>Max Temperature:</span> <%= Condition.weather_on_day_with_highest_rides.first.max_temperature %> fahrenheit</li>
        <li><span>Mean Temperature:</span> <%= Condition.weather_on_day_with_highest_rides.first.mean_temperature %> fahrenheit</li>
        <li><span>Min Temperature:</span> <%= Condition.weather_on_day_with_highest_rides.first.min_temperature %> fahrenheit</li>
        <li><span>Mean Humidity:</span> <%= Condition.weather_on_day_with_highest_rides.first.mean_humidity %> relative humidity</li>
        <li><span>Mean Visibility:</span> <%= Condition.weather_on_day_with_highest_rides.first.mean_visibility %> miles</li>
        <li><span>Mean Wind Speed:</span> <%= Condition.weather_on_day_with_highest_rides.first.mean_wind_speed %> mph</li>
        <li><span>Precipitation:</span> <%= Condition.weather_on_day_with_highest_rides.first.precipitation %> inches</li>
      </ul>
    </div>
    <h1><span>Weather</span> Conditions (day with lowest rides)</h1>
    <div class='trip-card'>
      <ul>
        <li><span>Date:</span> <%= Condition.weather_on_day_with_lowest_rides.first.id %></li>
        <li><span>Max Temperature:</span> <%= Condition.weather_on_day_with_lowest_rides.first.max_temperature %> fahrenheit</li>
        <li><span>Mean Temperature:</span> <%= Condition.weather_on_day_with_lowest_rides.first.mean_temperature %> fahrenheit</li>
        <li><span>Min Temperature:</span> <%= Condition.weather_on_day_with_lowest_rides.first.min_temperature %> fahrenheit</li>
        <li><span>Mean Humidity:</span> <%= Condition.weather_on_day_with_lowest_rides.first.mean_humidity %> relative humidity</li>
        <li><span>Mean Visibility:</span> <%= Condition.weather_on_day_with_lowest_rides.first.mean_visibility %> miles</li>
        <li><span>Mean Wind Speed:</span> <%= Condition.weather_on_day_with_lowest_rides.first.mean_wind_speed %> mph</li>
        <li><span>Precipitation:</span> <%= Condition.weather_on_day_with_lowest_rides.first.precipitation %> inches</li>
      </ul>
    </div>
  </div>
